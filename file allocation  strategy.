#include <stdio.h>
#include <string.h>

int main() {
    int disk[100] = {0}; // 0 = free, 1 = allocated
    int start, length, i;
    
    printf("Enter starting block of file: ");
    scanf("%d", &start);
    printf("Enter length of file: ");
    scanf("%d", &length);

    // Check if space is available
    for(i = start; i < start + length; i++) {
        if(disk[i] == 1) {
            printf("Error: Disk space not available!\n");
            return 0;
        }
    }

    // Allocate blocks
    for(i = start; i < start + length; i++)
        disk[i] = 1;

    printf("File allocated at blocks: ");
    for(i = start; i < start + length; i++)
        printf("%d ", i);

    return 0;
}
