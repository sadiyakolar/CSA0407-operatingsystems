#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <unistd.h>

// Function to be executed by threads
void* print_message(void* arg) {
    char* message = (char*) arg;
    for (int i = 0; i < 5; i++) {
        printf("%s (iteration %d)\n", message, i+1);
        sleep(1); // simulate work
    }
    return NULL;
}

int main() {
    pthread_t t1, t2;

    // Create threads
    pthread_create(&t1, NULL, print_message, "Thread 1: Hello from T1");
    pthread_create(&t2, NULL, print_message, "Thread 2: Hello from T2");

    // Wait for threads to finish
    pthread_join(t1, NULL);
    pthread_join(t2, NULL);

    printf("Both threads finished execution âœ…\n");
    return 0;
}
