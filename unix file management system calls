#include <stdio.h>
#include <fcntl.h>   // open, creat
#include <unistd.h>  // read, write, close
#include <string.h>  // strlen

int main() {
    int fd;
    char buffer[50];

    // 1. Create a file
    fd = creat("test.txt", 0777); // rwx for all
    if (fd < 0) {
        perror("creat");
        return 1;
    }
    close(fd);

    // 2. Open file for writing
    fd = open("test.txt", O_WRONLY);
    if (fd < 0) {
        perror("open");
        return 1;
    }

    // 3. Write data
    char msg[] = "Hello, Unix File System Calls!";
    write(fd, msg, strlen(msg));
    close(fd);

    // 4. Open file for reading
    fd = open("test.txt", O_RDONLY);
    if (fd < 0) {
        perror("open");
        return 1;
    }

    // 5. Read data
    int n = read(fd, buffer, sizeof(buffer));
    buffer[n] = '\0'; // null terminate
    printf("File content: %s\n", buffer);

    // 6. Move file pointer and read again (lseek)
    lseek(fd, 7, SEEK_SET); // move to position 7
    n = read(fd, buffer, sizeof(buffer));
    buffer[n] = '\0';
    printf("After lseek: %s\n", buffer);

    // 7. Close file
    close(fd);

    return 0;
}
