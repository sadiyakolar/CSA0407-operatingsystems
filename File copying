#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#define BUFFER_SIZE 1024
int main(int argc, char *argv[]) 
{
    if (argc != 3) return fprintf(stderr, "Usage: %s <source> <destination>\n", argv[0]), 1;
    int src_fd = open(argv[1], O_RDONLY);
    if (src_fd < 0) return perror("Source error"), 1;
    int dest_fd = open(argv[2], O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (dest_fd < 0) return perror("Destination error"), close(src_fd), 1;
    char buffer[BUFFER_SIZE];
    ssize_t bytes_read;
    while ((bytes_read = read(src_fd, buffer, BUFFER_SIZE)) > 0)
        if (write(dest_fd, buffer, bytes_read) != bytes_read)
            return perror("Write error"), close(src_fd), close(dest_fd), 1;
    if (bytes_read < 0) return perror("Read error"), close(src_fd), close(dest_fd), 1;
    return close(src_fd), close(dest_fd), 0;
}
